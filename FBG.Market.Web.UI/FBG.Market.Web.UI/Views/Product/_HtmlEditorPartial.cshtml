@using FBG.Market.Web.Identity.Controllers;
@using FBG.Market.Web.Identity.Models;
@model string
@{
    @Html.DevExpress().HtmlEditor(settings =>
{
    settings.Name = "PDescription";
    settings.Html = @Model.ToString();
    settings.CallbackRouteValues = new { Controller = "Product", Action = "HtmlEditorPartial" };
    settings.Width = 500;
    settings.ToolbarMode = HtmlEditorToolbarMode.Menu;
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadCallbackRouteValues = new { Controller = "Product", Action = "HtmlEditorPartialImageUpload" };
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadFolder = FBG.Market.Web.Identity.Controllers.PDescHtmlEditorSettings.ImageUploadDirectory;
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.ValidationSettings.Assign(PDescHtmlEditorSettings.ImageUploadValidationSettings);
    settings.SettingsDialogs.InsertImageDialog.SettingsImageSelector.Assign(PDescHtmlEditorSettings.ImageSelectorSettings);
}).Bind(@Model.ToString()).GetHtml();
}