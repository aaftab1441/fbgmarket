@model string
@{
    @Html.Hidden("products-path", Model)
    if ((!string.IsNullOrEmpty(Model)) && FBG.Market.Web.Identity.Utils.CreateDirectoryIfNotPresent(Model.Trim()))
    {
        @Html.DevExpress().ImageZoom(settings =>
        {
            settings.Name = "imageZoom";
            settings.AssociatedImageZoomNavigatorName = "zoomNavigator";
        }).GetHtml()

        @Html.DevExpress().CallbackPanel(
    panelSettings =>
    {
        panelSettings.Name = "cbpImageNavigator";
        panelSettings.CallbackRouteValues = new { Controller = "Product", Action = "CallbackPanelPartial" };
        panelSettings.Width = Unit.Percentage(100);

        panelSettings.SetContent(() =>
        {
            Html.DevExpress().ImageZoomNavigator(settings =>
            {
                settings.Name = "zoomNavigator";
                settings.SettingsAutoGeneratedImages.ImageHeight = System.Web.UI.WebControls.Unit.Pixel(300);
                settings.SettingsAutoGeneratedImages.ImageWidth = System.Web.UI.WebControls.Unit.Pixel(300);
                settings.SettingsAutoGeneratedImages.LargeImageHeight = System.Web.UI.WebControls.Unit.Pixel(700);
                settings.SettingsAutoGeneratedImages.LargeImageWidth = System.Web.UI.WebControls.Unit.Pixel(700);
                settings.SettingsAutoGeneratedImages.ThumbnailHeight = System.Web.UI.WebControls.Unit.Pixel(50);
                settings.SettingsAutoGeneratedImages.ThumbnailWidth = System.Web.UI.WebControls.Unit.Pixel(50);
                settings.SettingsAutoGeneratedImages.ImageCacheFolder = "~/Thumb/";
                settings.Styles.Thumbnail.ImageHeight = System.Web.UI.WebControls.Unit.Pixel(75);
                settings.Styles.Thumbnail.ImageWidth = System.Web.UI.WebControls.Unit.Pixel(75);
                settings.Init = (s, e) =>
                {
                    var zoomNav = (MVCxImageZoomNavigator)s;
                    zoomNav.UpdateImageCacheFolder();
                };

            }).BindToFolder(@Model.ToString()).Render();
        });
    }
).GetHtml()

    }
}